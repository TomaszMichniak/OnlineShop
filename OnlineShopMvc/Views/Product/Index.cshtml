@model IEnumerable<OnlineShop.Application.Product.ProductDto>

@{
    ViewData["Title"] = "Sklep";
}

<h1>Sklep</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="card m-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.Price</h6>
                <p class="card-text">@item.Description</p>
                <a class="btn btn-danger" asp-action="Delete" asp-route-encodedName="@item.EncodedName" >Delete</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-encodedName="@item.EncodedName" >Details</a>
                <a class="btn btn-success" asp-action="AddToCart" asp-controller="Cart" asp-route-encodedNameProduct="@item.EncodedName">Do koszyka</a>
            </div>
        </div>
    }
</div>


