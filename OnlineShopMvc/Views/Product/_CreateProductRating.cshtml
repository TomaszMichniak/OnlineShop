@model OnlineShop.Application.ProductRating.Commands.Create.CreateProductRatingCommand

<div class="row">
    <div class="col-md-4" id="createProductRating">
        <form asp-action="CreateProductRating">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ProductEncodedName" type="hidden" class="form-control" />
            
            <div class="form-group">
                <label class="control-label">Ocena</label>
                <input max="5" min="1" value="1" asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label"> Komentarz</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Wyślij" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
